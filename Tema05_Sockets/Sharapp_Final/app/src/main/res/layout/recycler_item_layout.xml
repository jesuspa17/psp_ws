<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:backgroundTint="@android:color/holo_blue_light"
    android:layout_marginBottom="5dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:id="@+id/linearLayoutImage"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageViewRecibida"
                android:src="@drawable/example"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enviado por:"
            android:gravity="right"
            android:padding="20dp"
            android:id="@+id/textViewUsuario"
            android:textSize="15dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fecha: "
            android:textSize="15dp"
            android:id="@+id/textViewFechaRecibo"
            android:layout_weight="1"
            android:padding="20dp"
            android:gravity="right"
            android:layout_below="@+id/textViewUsuario"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>



</android.support.v7.widget.CardView>